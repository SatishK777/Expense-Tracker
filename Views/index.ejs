<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/CSS/main.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <h2 class="sidebar-heading text-white py-4 px-3">Expense Tracker</h2>
            <div class="list-group list-group-flush mt-3">
                <a href="#view" class="list-group-item list-group-item-action bg-dark text-white" class="mb-3">Dashboard</a>
                <a href="#addData" class="list-group-item list-group-item-action bg-dark text-white" class="mb-3">Add New Expense</a>
                <a href="/" class="list-group-item list-group-item-action bg-dark text-white">Reports</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">â˜°</button>
            </nav> -->

            <div class="container-fluid mt-4  ms-5">
                <h1 class="mb-5 text-center ">Manage Your Expenses</h1>
                <div class="row">
                    <div class="col-lg-12" id="addData">
                        <!-- Add Data Form -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-body">
                                <h3 class="card-title text-center mb-3">Add Expense</h3>
                                <form method="post" action="/addData">
                                    <div class="mb-3">
                                        <label for="type" class="form-label">Type</label>
                                        <input type="text" name="type" id="type" class="form-control" placeholder="Income / Expense" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="category" class="form-label">Category</label>
                                        <input type="text" name="category" id="category" class="form-control" placeholder="Enter Category" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="amount" class="form-label">Amount</label>
                                        <input type="number" name="amount" id="amount" class="form-control" placeholder="Enter Amount" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="date" class="form-label">Date</label>
                                        <input type="date" name="date" id="date" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea name="description" id="description" class="form-control" placeholder="Enter Description"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12" id="view">
                        <!-- View Data Table -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header text-center bg-primary text-white">
                                <h3 class="mb-0">Expense List</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead class="bg-dark text-white">
                                            <tr>
                                                <th>ID</th>
                                                <th>Type</th>
                                                <th>Category</th>
                                                <th>Amount</th>
                                                <th>Description</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% Datas.forEach((data, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= data.type %></td>
                                                <td><%= data.category %></td>
                                                <td><%= data.amount %></td>
                                                <td><%= data.description %></td>
                                                <td><%= new Date(data.date).toLocaleDateString() %></td>
                                                <td>
                                                    <a href="/editData/<%= data.id %>" class="btn btn-warning btn-sm me-2">Edit</a>
                                                    <a href="/deleteData/<%= data.id %>" class="btn btn-danger btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

    
</body>
</html>
